/*********

Main

 ********/

@if(TemplateSettings.main_cart_variantSelect == "naoExibir"){
    <text>
     .cart-variantSelect{
        display: none !important;
      }
    </text>
}else if(TemplateSettings.main_cart_variantSelect == "exibirTodos"){
    <text>
     .cart-variantSelect{
        display: block !important;
      }
    </text>  
}else if(TemplateSettings.main_cart_variantSelect == "exibirBrindes"){
    <text>
     .brinde .cart-variantSelect{
        display: block !important;
      }
    </text>  
}else{
    <text>
     .cart-variantSelect{
        display: none !important;
      }
    </text>
}

::selection {
	background: @TemplateSettings.btn_primary_backgroundColor;
        color: @TemplateSettings.btn_primary_color;
}

::-moz-selection {
	background: @TemplateSettings.btn_primary_backgroundColor;
        color: @TemplateSettings.btn_primary_color;
}

.main{
	background: @TemplateSettings.main_backgroundColor; /* fff */
    color: @TemplateSettings.main_color; /* 242424 */	
}

.main-container{
	background: @TemplateSettings.main_container_backgroundColor; /* fff */
}

a{
	color: @TemplateSettings.main_color; /* 242424 */
}

/*********

 Header

********/

.header{
	background: @TemplateSettings.header_backgroundColor; /* fff */
	color: @TemplateSettings.header_color;
}

.header-navBar > li{
	border-bottom: 1px solid @TemplateSettings.header_color;		
}

.header a{
	color: @TemplateSettings.header_color;
}

 .header-logo a{
	background: url(../imagens/@TemplateSettings.header_logo_image) no-repeat 0 0 scroll transparent; 
}

.header-backgroundCart a{
	background: url(../imagens/@TemplateSettings.header_miniCart_image) no-repeat 0 0 scroll transparent;
	color: @TemplateSettings.header_miniCartQtd_color; /* 242424 */
}

.header-miniCart-container{
	background: @TemplateSettings.header_miniCartHover_backgroundColor; /* fff */
	border: 1px solid @TemplateSettings.header_miniCartHover_borderColor; /* c1c1c1 */
}

.header-miniCart-container, .header-miniCart-container a{
	color: @TemplateSettings.header_miniCartHover_color; /* 707070 */
}

/*********

 Menu 

 ********/

.nav{
	background: @TemplateSettings.nav_backgroundColor; /* 242424 */
}

.nav-navLink, .nav-navList a{
	color: @TemplateSettings.nav_color; /* c4c4c4 */
}

.nav-navList{
	border-right: 1px solid @TemplateSettings.nav_borderColor; /* e4e4e4 */
}

	.nav-navLink:hover, .nav-navList:hover .nav-navLink, .nav-navList:hover a{
		border-bottom: 5px solid @TemplateSettings.nav_hover_color; /* 30919a */
	}

	.nav-navChildren{
		background: @TemplateSettings.nav_children_backgroundColor; /* fff */
		color: @TemplateSettings.nav_children_color; /* 242424 */
		border: 1px solid @TemplateSettings.nav_hover_color;		
	}	

	.nav-navChildren-link{
		color: @TemplateSettings.nav_children_color !important;
	}

	.nav-navChildren-link:hover, .nav-navChildren-list a:hover{
		border-left: 5px solid @TemplateSettings.nav_hover_borderColor !important;
		color: @TemplateSettings.nav_hover_color !important;
	}

.nav-search input{
	background: @TemplateSettings.nav_search_backgroundColor; /* 434343 */
	color: @TemplateSettings.nav_search_color; /* 959595 */
}

/*********

 Botões 

 ********/

.btn-primary, .btn-primary a{
	background: @TemplateSettings.btn_primary_backgroundColor; /*#1ab6b4 */
	color: @TemplateSettings.btn_primary_color; /*#fff */
}

.btn-secondary, .btn-secondary a{
	background: @TemplateSettings.btn_secondary_backgroundColor; /*#474242 */
	color: @TemplateSettings.btn_secondary_color; /* #fff; */
}

.btn-tertiary, .btn-tertiary a{
	background: @TemplateSettings.btn_tertiary_backgroundColor; /*#bea784 */
	color: @TemplateSettings.btn_tertiary_color; /* #fff; */
}

