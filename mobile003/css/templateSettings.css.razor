/*Geral*/

body{
	background: @TemplateSettings.main_backgroundColor;
}

body .table-item td{
	border-color: @TemplateSettings.main_backgroundColor;
}

body .miniCart-subtotal th, body .miniCart-shipping th, body .miniCart-total th, body .miniCart-coupom th, body .miniCart-bonus th, body .miniCart-discount th, body .miniCart-interest th{
	border-color: @TemplateSettings.main_backgroundColor;
}

body .miniCart-subtotal td, body .miniCart-shipping td, body .miniCart-total td, body .miniCart-coupom td, body .miniCart-bonus td, body .miniCart-discount td, body .miniCart-interest td, body .cart-product-gift{
	border-color: @TemplateSettings.main_backgroundColor;
}

/*Topo*/

#header{   
	background: @TemplateSettings.header_backgroundColor;
}

.header-logo{
	background-image: url("../imagens/@TemplateSettings.header_logo_image");
}

body .header-search fieldset label{
	border-color: @TemplateSettings.header_search_borderColor;
	background-color: @TemplateSettings.header_search_backgroundColor;
}

body .header-search fieldset label input{
	color: @TemplateSettings.header_search_color;
}

/*Box*/

.box, .form-box, .form-box-heading, .product-description, .product-rate-content, .product-coments-content ul, .table-item td, .cart-shipping td, .cart-coupom td, .shipping-address-content, .shipping-method, .contact, .backStock-form{
	color: @TemplateSettings.box_color;
	background: @TemplateSettings.box_backgroundColor;
}

.miniCart-subtotal th, .miniCart-shipping th, .miniCart-total th, .miniCart-coupom th, .miniCart-bonus th, .miniCart-discount th, .miniCart-interest th{
	color: @TemplateSettings.box_color;
	background: @TemplateSettings.box_backgroundColor;
}

.miniCart-subtotal td, .miniCart-shipping td, .miniCart-total td, .miniCart-coupom td, .miniCart-bonus td, .miniCart-discount td, .miniCart-interest td{
	color: @TemplateSettings.box_color;
	background: @TemplateSettings.box_backgroundColor;
}

body .filterBy-item{
	border-color: @TemplateSettings.box_backgroundColor;
	background-color: @TemplateSettings.box_backgroundColor;
}


/*Títulos*/

.heading-primary{
	background: @TemplateSettings.heading_primary_backgroundColor;
	color: @TemplateSettings.heading_primary_color;
}

.deptChildrens{
	color: @TemplateSettings.heading_primary_color;
}

/*Cores*/

/*Cor Principal*/

.heading-secundary{background:@TemplateSettings.main_primaryColor_color}
.cart-total td{color:@TemplateSettings.main_primaryColor_color}
.sorry-info h2 strong{color: @TemplateSettings.main_primaryColor_color}
.order-number p{background:@TemplateSettings.main_primaryColor_color}
.backStock-name{color:@TemplateSettings.main_primaryColor_color}
.heading-quartiary h2, .heading-quartiary h1, .heading-quartiary h3{color:@TemplateSettings.main_primaryColor_color}


/*Textos de texto padrão*/

body{color:@TemplateSettings.main_darkText_color}
a{color:@TemplateSettings.main_darkText_color}


/*Barras*/

.table-title{background:@TemplateSettings.main_bar_color}
.ask{background-color:@TemplateSettings.main_bar_color}


/*Barra destaque*/

.ask.active{background-color:@TemplateSettings.main_darkBar_color}


/*Botões*/

.bt-big-special, .bt-small-special{
	background: @TemplateSettings.button_special_backgroundColor;
	color: @TemplateSettings.button_special_color;
}

.bt-big-primary, .bt-small-primary{
	background: @TemplateSettings.button_primary_backgroundColor;
	color: @TemplateSettings.button_primary_color;
}

.bt-big-disabled, .bt-small-disabled{
	background: @TemplateSettings.button_disabled_backgroundColor;
	color: @TemplateSettings.button_disabled_color;
}



/*Vitrines*/

.collection-product-release{background:@TemplateSettings.collections_releaseTag_backgroundColor; color: @TemplateSettings.collections_releaseTag_color;}
.collection-product-preSale{background:@TemplateSettings.collections_releaseTag_backgroundColor; color: @TemplateSettings.collections_releaseTag_color;}
.collection-product-offer{background: @TemplateSettings.collections_offerTag_backgroundColor; color: @TemplateSettings.collections_offerTag_color;}
.collection-product-unavailable{background: @TemplateSettings.collections_unavailableTag_backgroundColor; color: @TemplateSettings.collections_unavailableTag_color}
.collection-product-name{color:@TemplateSettings.collections_prodtuctName_color}
.collection-product-price{color:@TemplateSettings.collections_prodtuctPrice_color}
.collection-product-splitPrice{color:@TemplateSettings.collections_prodtuctSplitPrice_color}
.collection-product-price del{color:@TemplateSettings.collections_prodtuctOldPrice_color}
.collection-product{background-color:@TemplateSettings.collections_prodtuct_backgroundColor}


/*Produtos*/

.product-oldPrice{}
.product-price{color:@TemplateSettings.main_primaryColor_color}
.product-payInFullPrice{color:@TemplateSettings.main_primaryColor_color}
.product-splitPrice{color:@TemplateSettings.main_primaryColor_color}
body .product-variant-select .variante_imagem_disponivel_selecionada{border: 1px solid @TemplateSettings.main_primaryColor_color;}
body .product-variant-select .variante_texto_disponivel_selecionada{border: 1px solid @TemplateSettings.main_primaryColor_color; color: @TemplateSettings.main_primaryColor_color}


/*Rodapé*/

body #footer{
	background: @TemplateSettings.footer_backgroundColor;
	border-color: @TemplateSettings.footer_borderColor;
}

.footer-institutional li a{
	color: @TemplateSettings.footer_institutionalLink_color;
}

.footer-text{
	color: @TemplateSettings.footer_text_color;
}

