/*********

 Header

********/

.header{
      background: @TemplateSettings.header_backgroundColor; /* fff */
      color: @TemplateSettings.header_color;
}

.header-navBar > li{

}

.header a{
      color: @TemplateSettings.header_color;
}

 .header-logo a{
      background: url(../imagens/@TemplateSettings.header_logo_image) no-repeat 0 center scroll transparent; 
}

.header-backgroundCart{
      background: url(../imagens/@TemplateSettings.header_miniCart_image) no-repeat 0 0 scroll transparent;
}

.header-backgroundCart a{
      color: @TemplateSettings.header_miniCartQtd_color; /* 242424 */
}

.header-miniCart-container{
      background: @TemplateSettings.header_miniCartHover_backgroundColor; /* fff */
      border: 1px solid @TemplateSettings.header_miniCartHover_borderColor; /* c1c1c1 */
}

.header-miniCart-container, .header-miniCart-container a{
      color: @TemplateSettings.header_miniCartHover_color; /* 707070 */
}

.header-miniCart-container .shippingColor{
      color: @TemplateSettings.header_miniCart_color;
}



/*********

 Menu 

 ********/

.nav{
      background: @TemplateSettings.nav_backgroundColor;
}

.nav-navLink, .nav-navList a{
      color: @TemplateSettings.nav_color;
}

.nav-navList{

}

      .nav-navLink:hover, .nav-navList:hover .nav-navLink, .nav-navList:hover a{
            border-bottom: 5px solid @TemplateSettings.nav_hover_color;
      }

      .nav-navChildren{
            background: @TemplateSettings.nav_children_backgroundColor;
            color: @TemplateSettings.nav_children_color;
            border: 1px solid @TemplateSettings.nav_hover_color;        
      }     

      .nav-navChildren-link{
            color: @TemplateSettings.nav_children_color !important;
      }

      .nav-navChildren-link:hover, .nav-navChildren-list a:hover{
            border-left: 5px solid @TemplateSettings.nav_hover_borderColor !important;
            color: @TemplateSettings.nav_hover_color !important;
      }

.nav-navList.todosDepartamentos{
      background: @TemplateSettings.nav_allDepts_backgroundColor; 
}

.nav-search input{
      background: @TemplateSettings.nav_search_backgroundColor; 
      border-color: @TemplateSettings.nav_search_borderColor; 
      color: @TemplateSettings.nav_search_color;
}

.nav-searchIco{
  color: @TemplateSettings.nav_searchIco_color !important;
}

/*********

 Menu Fixo

 ********/

.navFixed{
  border: 1px solid @TemplateSettings.navFixed_borderColor;
  background-color: @TemplateSettings.navFixed_bgColor;
}

.navFixed .navFixed-fixedLink{
  color: @TemplateSettings.navFixed_fontColor;
}

.navFixed .navFixed-fixedLink:hover{
  color: @TemplateSettings.navFixed_fontColorhover;
}

.btnFixed{
  background: url('../imagens/@TemplateSettings.navFixed_bgimageClose') no-repeat left top transparent;
}

.btnFixed.selecionado{
  background: url('../imagens/@TemplateSettings.navFixed_bgimageOpen') no-repeat left top transparent;
}


