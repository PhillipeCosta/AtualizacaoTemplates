/* Variante Carrinho */

@if(TemplateSettings.main_cart_variantSelect == "naoExibir"){
    <text>
     .cart-variantSelect{
        display: none !important;
      }
    </text>
}else if(TemplateSettings.main_cart_variantSelect == "exibirTodos"){
    <text>
     .cart-variantSelect{
        display: block !important;
      }
    </text>  
}else if(TemplateSettings.main_cart_variantSelect == "exibirBrindes"){
    <text>
     .brinde .cart-variantSelect{
        display: block !important;
      }
    </text>  
}else{
    <text>
     .cart-variantSelect{
        display: none !important;
      }
    </text>
}

