      <label class="col-md-3 text-right main-clearPadding main-padding  documentid">CPF</label>
      <span class="col-md-6" style="padding-right: 0;">
        @Html.InputText("Customer.DocumentId").Maxlength("18").TabIndex("4")
      </span>
      <span class="pull-left main-padding">
        <small class="exampledocumentid">(000.000.000-00)</small>       
      </span>
    </div>  
    <div class="form parent-validation custom-clear custom-overflow custom-paddingV5 regionalDocumentId">
      <label class="col-md-3 text-right custom-clearPadding custom-paddingV5">RG</label>
