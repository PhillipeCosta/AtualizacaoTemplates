    <div class="form parent-validation main-clear main-overflow required">
      <label class="col-md-3 text-right main-clearPadding main-padding">Nome completo</label>
      <span class="col-md-7">
        @Html.InputText("Customer.Name").Maxlength("100").TabIndex("3")
      </span>
    </div>
