        <label class="col-md-3 text-right main-clearPadding main-padding">Estado</label>
        <span class="col-md-7">
          @Html.InputDropdown("Customer.BillingAddress.State", "States", "Selecione um estado").TabIndex("25")
        </span>
      </div>          
      </div>
  </div>
  <div class="main-overflow main-clear @if (!Model.IsGiftList)
    { 
        @:entrega_oculta
    } 
    ">
    <div class="col-md-6">&nbsp;</div>
    <div class="col-md-6 main-padding20">
      <div class="text-center main-overflow main-clear">
        <a href="javascript:void(0)" class="bt btn-primary text-uppercase text-center" name="enviar" id="enviar">Enviar</a>
