        @Html.InputText("Customer.RegionalDocumentId").Maxlength("18")
      </span>
    </div>     
    <div class="form parent-validation main-clear main-overflow required stateRegistration" style="display: none;">
      <label class="col-md-3 text-right main-clearPadding main-padding">Inscrição estadual</label>
      <span class="col-md-7">
        @Html.InputText("Customer.RegionalDocumentId").Maxlength("20").TabIndex("5")
      </span>
      <span class="pull-left" style="padding-top: 8px;">
