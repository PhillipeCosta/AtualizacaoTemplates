      <span class="col-md-7">
        <label class="col-md-6 main-clearPadding">
          <span class="pull-left">
          @Html.InputRadio("Customer.CustomerType", "Person").AddClass("radio").TabIndex("1")
          </span>
          <span class="pull-left" style="padding-top: 5px;">Pessoa Física</span>
        </label>
              <label class="col-md-6 main-clearPadding">
                <span class="pull-left">
                    @Html.InputRadio("Customer.CustomerType", "Company").AddClass("radio").TabIndex("2")
                  </span>
                  <span class="pull-left" style="padding-top: 5px;">Pessoa Jurídica</span>
              </label>      
          </span> 
