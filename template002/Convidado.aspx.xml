        @Html.InputText("Customer.PhoneAreaCode").Maxlength("2").AddClass("txtDDD").TabIndex("5")
      </span>
      <span class="col-md-2 main-clearPadding">
        @Html.InputText("Customer.PhoneNumber").Maxlength("10").TabIndex("6")
      </span>
    </div>                  
    <div class="form parent-validation main-clear main-overflow">
      <label class="col-md-3 text-right main-clearPadding main-padding">Telefone Alternativo</label>
      <span class="col-md-1 text-center" style="padding-right: 0;">
        @Html.InputText("Customer.PhoneAreaCodeAlternative").Maxlength("2").AddClass("txtDDD").TabIndex("7")
