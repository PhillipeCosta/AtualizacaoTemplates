        <label class="col-md-3 text-right main-clearPadding main-padding">Complemento</label>
        <span class="col-md-7">
          @Html.InputText("ShippingAddresses.StreetComplement").Maxlength("50").TabIndex("13")
        </span>
        <span class="pull-left main-padding">
          <small>(opcional)</small>
        </span>       
      </div>
      <div class="form parent-validation main-clear main-overflow required entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Bairro</label>
        <span class="col-md-7">
          @Html.InputText("ShippingAddresses.District").Maxlength("80").TabIndex("14")
        </span>
      </div>  
      <div class="form parent-validation main-clear main-overflow required entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Cidade</label>
        <span class="col-md-7">
          @Html.InputText("ShippingAddresses.City").Maxlength("100").TabIndex("15")
        </span>
      </div>  
      <div class="form parent-validation main-clear main-overflow required entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Estado</label>
        <span class="col-md-7">
          @Html.InputDropdown("ShippingAddresses.State", "States", "Selecione um estado").TabIndex("16")
        </span>
      </div>  
      <div class="form form-check main-clear main-overflow entrega_oculta text-center" id="cobranca">
        <strong style="display:block;">Este é seu endereço de cobrança?</strong>
                <label>
                  <span class="pull-left">
                      @Html.InputRadio("IsSameBillingAddress", "True").AddClass("radio").TabIndex("17")
                  </span>
                    <span class="pull-left" style="padding-top: 5px;">Sim</span>
                </label>
                <label>
                  <span class="pull-left">
                      @Html.InputRadio("IsSameBillingAddress", "False").AddClass("radio").TabIndex("18")
                    </span>
                    <span class="pull-left" style="padding-top: 5px;">Não</span>
                </label>
      </div>                          
    }

      <div class="enderecoCobranca @if (Model.IsGiftList)
        {
        @:mostra
        }
    ">    
        <h5 class="main-padding">// Dados de cobrança</h5>

      <div class="form cep main-clear main-overflow parent-validation">
        <label class="col-md-5 text-right main-clearPadding main-padding">Digite primeiro o CEP: </label>
        <span class="col-md-4" style="padding-right: 0;">
          @Html.InputText("Customer.BillingAddress.ZipCode").Maxlength("9").TabIndex("19")
        </span>
        <span class="col-md-3 main-clearPadding">
          <a href="javascript:void(0);" class="bt btn-secondary text-uppercase text-center" style="padding: 6px 11px;">OK</a>
          <a href="javascript:callSearchZipCode('ShippingAddresses_ZipCode')"><small>(Esqueci meu CEP)</small></a>
        </span>
      </div>
      <div class="form parent-validation main-clear main-overflow required entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Endereço</label>
        <span class="col-md-7">
          @Html.InputText("Customer.BillingAddress.Street").Maxlength("200").TabIndex("20")
        </span>
      </div>
      <div class="form parent-validation main-clear main-overflow required entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Número</label>
        <span class="col-md-7">
          @Html.InputText("Customer.BillingAddress.StreetNumber").Maxlength("10").TabIndex("21")
        </span>
      </div>  
      <div class="form parent-validation main-clear main-overflow entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Complemento</label>
        <span class="col-md-7">
          @Html.InputText("Customer.BillingAddress.StreetComplement").Maxlength("50").TabIndex("22")
        </span>
        <span class="pull-left main-padding">
          <small>(opcional)</small>
        </span>       
      </div>
      <div class="form parent-validation main-clear main-overflow required entrega_oculta">
        <label class="col-md-3 text-right main-clearPadding main-padding">Bairro</label>
